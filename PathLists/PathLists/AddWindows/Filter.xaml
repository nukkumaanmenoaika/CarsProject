<Window x:Class="PathLists.AddWindows.Filter"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathLists.AddWindows"
        mc:Ignorable="d"
        Title="Filter" Height="450" Width="800">
    <Grid Background="#FFCFDE49">
        <Border MinWidth="400" Margin="15" VerticalAlignment="Center" Padding="30"
MaxWidth="550" CornerRadius="20" Background="#FF73E0CE">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <StackPanel>
                    <TextBlock Text="sФильтр" TextAlignment="Center" FontSize="30" FontWeight="Bold" Margin="0 0 0 20"/>
                    <StackPanel>
                        <TextBox x:Name="City" materialDesign:HintAssist.Hint="Введите пункт назначения" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </StackPanel>
                    
                    <Button Content="Сохранить" Margin="0 20" Click="Button_Add_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
